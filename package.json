{
  "name": "rollup-copy-transform-css",
  "version": "1.1.0",
  "description": "Inlining, minifying and other methods for transforming stylesheets when copying them with rollup-plugin-copy.",
  "author": "Ferdinand Prantl <prantlf@gmail.com> (http://prantl.tk)",
  "license": "MIT",
  "licenses": [
    {
      "type": "MIT",
      "url": "https://github.com/prantlf/rollup-copy-transform-css/blob/master/LICENSE"
    }
  ],
  "homepage": "http://prantlf.github.com/rollup-copy-transform-css/",
  "repository": {
    "type": "git",
    "url": "https://github.com/prantlf/rollup-copy-transform-css.git"
  },
  "bugs": {
    "url": "http://github.com/prantlf/rollup-copy-transform-css/issues"
  },
  "type": "module",
  "module": "lib/index.js",
  "main": "lib/index.cjs",
  "files": [
    "lib"
  ],
  "engines": {
    "node": ">= 14"
  },
  "scripts": {
    "prepare": "rollup -c",
    "lint": "denolint",
    "check": "node test",
    "cover": "c8 node test",
    "test": "denolint && c8 node test",
    "version": "conventional-changelog -p angular -i CHANGELOG.md -s"
  },
  "c8": {
    "check-coverage": true,
    "reporter": [
      "text",
      "lcov"
    ],
    "branches": 100,
    "lines": 100,
    "functions": 100,
    "statements": 100
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      "@semantic-release/npm",
      [
        "@semantic-release/github",
        {
          "failComment": false
        }
      ],
      "@semantic-release/git"
    ]
  },
  "dependencies": {
    "cssnano": "^5.1.7",
    "picomatch": "^2.3.1",
    "postcss": "^8.4.13",
    "postcss-fail-on-warn": "^0.2.1",
    "postcss-import": "^14.1.0",
    "postcss-url": "^10.1.3"
  },
  "devDependencies": {
    "@node-rs/deno-lint": "^1.13.1",
    "@semantic-release/changelog": "^6.0.1",
    "@semantic-release/git": "^10.0.1",
    "builtin-modules": "^3.3.0",
    "c8": "^7.11.2",
    "rollup": "^2.73.0",
    "rollup-plugin-copy": "^3.4.0",
    "tehanu": "^0.2.2",
    "tehanu-repo-coco": "^0.0.2"
  },
  "peerDependencies": {
    "rollup": "^2.0.0",
    "rollup-plugin-copy": "^3.0.0"
  },
  "keywords": [
    "rollup",
    "plugin",
    "rollup-plugin",
    "colpy",
    "transform",
    "css",
    "stylesheets",
    "minify",
    "concatenate"
  ]
}
